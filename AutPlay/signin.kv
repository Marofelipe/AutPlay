#: import C kivy.utils.get_color_from_hex
#: import FadeTransition kivy.uix.screenmanager.FadeTransition

# GERENCIADOR DE TELAS

    

# TELA DE INICIO
<Inicio>:

    BoxLayout:
        orientation: "vertical"
        canvas.before:
            Color:
                rgba: 1,1,1,1
            Rectangle:
                pos: self.pos
                size: self.size

        Image:
            source: "image/logo.png"
            pos_hint: {'center_x': .5, 'center_y': .5}

        Button:
            text: "Inicio"
            font_size: "40sp"
            background_normal: ""
            background_color: C("#1E90FF")
            on_press: root.manager.current = "jogo"
            size_hint: (.4,.3)
            pos_hint: {'center_x': .5, 'center_y': .3}
            on_release: root.jogar()

        Label:
            text: "Autor: Rafael Muller Franco"
            color: C("#1E90FF")
            pos_hint: {'x': 0, 'y': 0}
            size_hint: 1,.1

# TELA DO JOGO
<Jogo>:

    BoxLayout:
        orientation: "vertical"
        canvas.before:
            Color: 
                rgba: 1,1,1,1
            Rectangle:
                pos: self.pos
                size: self.size
        spacing: 2

        ActionBar:
            background_image: 'image/normal.png'
            background_color: C("#1E90FF")
            id: menu
            pos_hint: {'top': 1} 
            ActionView:
                use_separator: True
                ActionPrevious:
                    title: "Jogo da Forca"
                    with_previous: False
                    #app_icon:
                ActionOverflow:
                ActionButton:
                    #icon: 
                    text: "Reiniciar"
                    on_release: root.sortear_palavra()
                ActionButton:
                    text: "Sair"
                    on_release: app.root.current = 'Menu'

        Image:
            id: image
            source: "image/1.jpg"

        Label:
            text: root.lbl_tentativas
            halign: "center"
            valign: "middle"
            color: C("B22222")
            font_size: "25sp"
            size_hint: (1, .15)
            markup: True

        Label:
            text: root.lbl_certas
            halign: "center"
            valign: "middle"
            color: C("1E90FF")
            font_size: "40sp"
            size_hint: (1, .2)
            markup: True

        TextInput:
            id: txt_chute
            focus: True
            font_size: "40sp"
            size_hint: (.3, .2)
            pos_hint: {'center_x': .5, 'center_y': .5}
            multiline: False
            on_text_validate: root.chute()

        Button:
            text: "Chute"
            background_normal: ""
            background_color: C("#1E90FF")
            font_size: "25sp"
            size_hint: (.4, .2)
            pos_hint: {'center_x': .5, 'center_y': .5}
            on_release: root.chute()
        Label:
            size_hint: (.5,.05)